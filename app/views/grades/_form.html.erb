<%= bootstrap_form_for(@grade) do |f| %>
    <div class="col-md-12">
      <%= f.collection_select :student, Student.all, :id, :name, prompt: "Select a student" %>
      <%= f.collection_select :course, Course.all, :id, :name, prompt: "Select a course" %>
      <%= f.number_field :value %>
      <div class="col-md-4 pull-right">
        <div class="pull-right">
          <%= link_to 'Back', grades_path, class: "btn btn-info" %>
          <%= f.submit 'Save', class: "btn btn-info" %>
        </div>
      </div>
    </div>
<% end %>