<h3>Listing classrooms</h3>

<div id="table-responsive" class="col-md-8">
  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th>Student</th>
      <th>Course</th>
      <th colspan="2"></th>
    </tr>
    </thead>

    <tbody>
    <% @classrooms.each do |classroom| %>
        <tr>
          <td><%=  classroom.student.name %></td>
          <td><%=  classroom.course.name %></td>
          <td><%= link_to 'Show', classroom %></td>
          <td><%= link_to 'Destroy', classroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to 'New', new_classroom_path ,class: "btn btn-info col-md-6 pull-right" %>
</div>
<br>